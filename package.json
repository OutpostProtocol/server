{
  "name": "rain-backend",
  "version": "1.0.0",
  "description": "Indexing server for arweave transactions and backend for other data",
  "main": "src/index.js",
  "author": "Sam <hatem@clearrain.xyz>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development nodemon -e js,ts -w src/ -r dotenv-flow/config -r ts-node/register src/index.js",
    "start:resetTxs": "RESET_TXS=yes yarn start",
    "start:prod": "NODE_ENV=production DEBUG=runner:* node -r dotenv-flow/config -r ts-node/register src/index.js",
    "testDbState": "NODE_ENV=development nodemon -w test/ -r dotenv-flow/config -r ts-node/register test/testDbState.ts",
    "addWriter": "node -r dotenv-flow/config -r ts-node/register scripts/addRole.ts",
    "addWriter:dev": "NODE_ENV=development yarn addWriter",
    "addWriter:prod": "DB_REJECT_UNAUTHORIZED=NO NODE_ENV=production yarn addWriter",
    "addDevCommunity": "NODE_ENV=development node -r ts-node/register -r dotenv-flow/config scripts/addDevCommunity.ts",
    "addCommunities": "node -r dotenv-flow/config -r ts-node/register scripts/addAll.ts",
    "addCommunities:remote": "DB_REJECT_UNAUTHORIZED=NO yarn addCommunities",
    "addCommunities:dev": "NODE_ENV=development yarn addCommunities",
    "addCommunities:staging": "NODE_ENV=staging yarn addCommunities:remote",
    "addCommunities:prod": "NODE_ENV=production yarn addCommunities:remote",
    "addPublications": "node -r dotenv-flow/config -r ts-node/register scripts/upload",
    "addPublications:dev": "NODE_ENV=development yarn addPublications",
    "pm:ar": "DB_REJECT_UNAUTHORIZED=NO node -r dotenv-flow/config -r ts-node/register scripts/arPostMigration.ts",
    "pm:ar:dev": "NODE_ENV=development yarn pm:ar",
    "pm:ar:prod": "NODE_ENV=production yarn pm:ar",
    "pm:csv": "node -r dotenv-flow/config -r ts-node/register scripts/csvPostMigration.ts",
    "pm:csv:dev": "NODE_ENV=development yarn pm:csv",
    "pm:csv:prod": "DB_REJECT_UNAUTHORIZED=NO  NODE_ENV=production yarn pm:csv",
    "lint": "yarn eslint"
  },
  "dependencies": {
    "3box": "1.7.0-node-1",
    "3id-resolver": "^1.0.1",
    "@types/express": "^4.17.8",
    "apollo-datasource": "^0.7.1",
    "apollo-server-express": "^2.18.2",
    "apollo-upload-client": "^14.1.2",
    "arql-ops": "https://kybjhezuyftg.arweave.net/ITTPLYoxidZzAJP50FQ03QJUSkkh9iKHcmMcLZOvqtQ",
    "arweave": "^1.7.1",
    "base64-arraybuffer": "^0.2.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "did-jwt": "^4.4.0",
    "did-resolver": "^2.0.1",
    "dotenv-flow": "^3.1.0",
    "ethers": "^5.0.12",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "express-validator": "^6.6.1",
    "graphql": "^15.1.0",
    "helmet": "^4.1.1",
    "ipfs-repo-migrations": "^5.0.5",
    "lodash": "^4.17.19",
    "outpost-protocol": "^1.0.0",
    "outpost-subscriptions": "^0.0.1",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "promises-tho": "^1.1.0",
    "sequelize": "^6.3.3",
    "showdown": "^1.9.1",
    "smartweave": "https://arweave.net/KDRqJYax0-Dy_3nnWqguNThd0WjJZI3iRz3X0YscTzw",
    "string-hash": "^1.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-plugin-graphql-tag": "^2.5.0",
    "debug": "^4.1.1",
    "deep-equal": "^2.0.3",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "neat-csv": "^5.2.0",
    "nodemon": "^2.0.4",
    "yargs": "^16.0.3"
  }
}
